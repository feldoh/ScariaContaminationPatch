<Defs>
  <RecipeDef MayRequire="sarg.alphagenes">
    <defName>Taggerung_SCP_MakeNullifier</defName>
    <label>make Nullifier</label>
    <description>Craft Nullifiers from fungi, components, and plasteel.</description>
